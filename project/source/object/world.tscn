extends TileMap

var moisture = FastNoiseLite.new()      # 湿度
var temperature = FastNoiseLite.new()   # 温度
var altitude = FastNoiseLite.new()      # 海拔

var chunk_width = 16
var chunk_height = 16

func _ready():
	moisture.seed = randi()
	temperature.seed = randi()
	altitude.seed = randi()

func _process(delta):
	generate_chunk(position)

func generate_chunk(position):
	var tile_pos = local_to_map(position)
	for x in range(chunk_width):
		for y in range(chunk_height):
			var moisture_noise = moisture.\\
			get_noise_2d(tile_pos.x + x, tile_pos.y + y)
			var temperature_noise = temperature.\\
			get_noise_2d(tile_pos.x + x, tile_pos.y + y)
			var altitude_noise = altitude.\\
			get_noise_2d(tile_pos.x + x, tile_pos.y + y)
			set_cell(0, Vector2(tile_pos.x + x, tile_pos.y + y), 0, Vector2.ZERO, 0)
"

